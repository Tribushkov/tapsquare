<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
  <div class="col-md-offset-4 col-md-4">
    <div class="panel panel-default main__panel_mtop">
      <div class="panel-body">
        <form id="registerForm" remote="none">
          <div class="form-group" id="emailGroup">
            <input class="form-control" id="exampleemail" name="email" placeholder="Email" type="email"></input>
          </div>
          <div class="form-group" id="loginGroup">
            <input class="form-control" id="examplelogin" name="login" placeholder="Login" type="text"></input>
          </div>
          <div class="form-group" id="password1Group">
            <input class="form-control" id="password1" name="password1" placeholder="Password" type="password"></input>
          </div>
          <div class="form-group" id="password2Group">
            <input class="form-control" id="password2" name="password2" placeholder="Confirm password" type="password"></input>
          </div>
          <div class="row">
            <div class="col-md-1">
              <button class="btn btn-default btn-primary" type="submit">Register</button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-md-offset-10 col-md-1">
        <a class="btn btn-success" href="#login">Back</a>
      </div>
    </div>
  </div>
</fest:template>
