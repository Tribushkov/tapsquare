<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="container-fluid">
        <div class="row">
    <div class="col-md-offset-4 col-md-4">
        <div class="panel panel-default main__panel_mtop">
            <div class="panel-body">
                <form id="idForm" method="POST">
                    <div class="form-group">
                        <label class="control-label" for="email1" id="emailLog" style="display:none;"></label>
                        <input type="email" name="email" class="form-control" id="email1" placeholder="Email"></input>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="password1" id="passwordLog" style="display:none;"></label>
                        <input type="password" class="form-control" name="password" id="password1" placeholder="Password"></input>
                    </div>
                    <div class="row">
                        <div class="col-md-1">
                            <button type="submit" class="btn btn-default btn-primary" id="login_form">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-8 col-md-1">
                <a class="btn btn-default" href="#register">Register</a>
            </div>
            <div class="col-md-offset-1 col-md-1">
                <a class="btn btn-success" href="#">Back</a>
            </div>
        </div>
    </div>
</div>
</div>
</fest:template>
