<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="col-md-offset-4 col-md-4">
        <div class="panel panel-default main__panel_mtop">
            <div class="panel-body">
                <form action="/signin" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email"></input>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"></input>
                    </div>
                    <div class="row">
                        <div class="col-md-1">
                            <button type="submit" class="btn btn-default btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-8 col-md-1">
                <a class="btn btn-default" href="#register">Register</a>
            </div>
            <div class="col-md-offset-1 col-md-1">
                <a class="btn btn-success" href="#">Back</a>
            </div>
        </div>
    </div>
</fest:template>
