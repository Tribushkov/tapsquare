<fest:template context_name="data" xmlns:fest="http://fest.mail.ru">
<nav class="navbar navbar-default">
<div class="container-fluid">
  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav navbar-right">
      <li><fest:choose>
       <fest:when test="data.logged">
         <button class="main__log-button" id="logout">
           Log out
         </button>
       </fest:when>
       <fest:otherwise>
         <button class="main__log-button" id="login">
           Log in
         </button>
       </fest:otherwise>
     </fest:choose></li>
    </ul>
  </div><!-- /.navbar-collapse -->

</div><!-- /.container-fluid -->
</nav>
<div class="row main">
  <div class="col-md-offset-4 col-sm-offset-4 col-md-4 col-sm-4">
    <div class="row">
      <div class="col-md-4 col-sm-4 col-xs-4">
        <button class="main__scoreboard-button" id="scoreboard">
          Scoreboard
        </button>
      </div>
      <div class="col-md-8 col-sm-8 col-xs-8">
        <button class="main__game-button" id="game">
          TapSquare
        </button>
      </div>
    </div>
   </div>
</div>

</fest:template>
