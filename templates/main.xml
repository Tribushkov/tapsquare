<fest:template context_name="data" xmlns:fest="http://fest.mail.ru">
<div class="row">
  <nav class="navbar">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <button class="btn btn-warning main__scoreboard-button" id="scoreboard">
            Scoreboard
          </button>
        </li>
        <li><fest:choose>
         <fest:when test="data.logged">
           <a class="btn btn-success main__log-button" id="logout" role="button">
             Log out
           </a>
         </fest:when>
         <fest:otherwise>
           <a class="btn btn-success main__log-button" id="login" role="button">
             Log in
           </a>
         </fest:otherwise>
       </fest:choose></li>
      </ul>
    </div>
  </div>
  </nav>
  <div class="row main">
    <div class="col-md-offset-4 col-sm-offset-4 col-md-4 col-sm-4">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <button class="main__game-button" id="game">
            TapSquare
          </button>
        </div>
      </div>
     </div>
  </div>
</div>
</fest:template>
